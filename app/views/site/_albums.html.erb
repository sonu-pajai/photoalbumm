<%albums.each_with_index do |album,ind| %>		
<div class="col-lg-6 col-md-6 col-xs-12 ">
  <div id="myCarousel<%=ind%>" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
    	<%get_photos(album).each_with_index do |photo,index|%>
	      <li data-target="#myCarousel<%=ind%>" data-slide-to="<%=index%>" class="<%= 'active' if index==0%>"></li>
	    <%end%>
    </ol>
    <!-- Wrapper for slides -->
    <div class="carousel-inner">
    	<%get_photos(album).each_with_index do |photo, i|%>
      <div class="item <%= 'active' if i==0%>">
        <img src="<%=photo.image.url%>" alt="<%=photo.tagline%>" style="width:100%;">
      </div>
			<%end%>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel<%=ind%>" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel<%=ind%>" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  Author: <a href="/userprofile/<%=album.user.id%>"><%=album.user.name%></a>
</div>
<%end%>