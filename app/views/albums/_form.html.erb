<%= render'shared/errors', ref_obj: @album %>
<%=form_for(@album, :html => {:multipart=>true, class: "form-horizontal well mainform" }) do |f| %>
<div class="form-group">
  <div class="col-lg-2 col-sm-12">
    <label for="title">Name:<span class="error">*</span></label>
  </div>
  <div class="col-lg-10 col-sm-12">
    <%= f.text_field :name , :placeholder => "Album name", :class => "form-control required" %>
  </div>
</div>

<div class="form-group">
  <div class="col-lg-12 ">
    <%= f.submit "Save", :class => "btn btn-primary" %>
    <%=link_to 'Back', albums_path , :class =>"btn btn-default"%>
  </div>
</div>
<% end %>
