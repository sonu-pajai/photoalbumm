<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-6 col-md-2">       
        <a href="<%=new_album_photo_path%>" class="btn btn-primary"><i class="fa fa-plus"></i> Photo</a>     
      </div>    
    </div>  
     <!-- /.row --> 
    <div class="row">
      <div class="col-md-12">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Photo</th>
              <th>Tagline</th>
              <th>Album</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @photos.each do |photo| %>
              <tr>
                <td><img src="<%= photo.image %>" width="100" height="100"></td>
                <td><%= photo.tagline %></td>
                <td><%= photo.album.name %></td>
                <td>
                  <%=link_to '', edit_album_photo_path(@album, photo), :class => "fa fa-pencil-square-o fa-1x " %>&nbsp;|
                  <%=link_to '', album_photo_path(@album, photo), :class => "fa fa-trash-o", method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= will_paginate @photos %>
      </div>
    </div>   
  <!-- /.container-fluid -->
  </div>
</div>





