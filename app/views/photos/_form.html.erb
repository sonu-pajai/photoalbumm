
<%= render'shared/errors', ref_obj: @photo %>
<%=form_for [@album, @photo], html:{:multipart => true,class: "form-horizontal mainform"} do |f| %>
<div class="form-group">
  <div class="col-lg-2 col-sm-12">
    <label for="title">Title:<span class="error">*</span></label>
  </div>
  <div class="col-lg-10 col-sm-12">
    <%= f.text_field :tagline , :placeholder => "Ttagline", :class => "form-control required" %>
  </div>
</div>


<div class="form-group">
  <div class="col-lg-2 col-sm-12">
    <label for="title"> Photo:<span class="error">*</span></label>
  </div>
  <div class="col-lg-10 col-sm-12">
    <%if @photo.image.present?%>
      <%= f.file_field :image ,  :class =>"form-control" %>
    <%else%>
      <%= f.file_field :image , :class => " form-control " %>
    <%end%>
  </div>
</div>


<div class="form-group">
  <div class="col-lg-12 ">
    <%= f.submit "Save", :class => "btn btn-primary" %>
    <%=link_to 'Back', album_photos_path , :class =>"btn btn-default"%>
  </div>
</div>

<% end %>

